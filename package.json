{
  "name": "suscripciones-wompi-chatwoot",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "dev": "npm -w apps/api run dev",
    "dev:admin": "npm -w apps/admin run dev",
    "build": "npm -w apps/api run build && npm -w apps/admin run build",
    "lint": "npm -w apps/api run lint && npm -w apps/admin run lint",
    "start": "npm -w apps/api run start",
    "start:migrate": "npm -w apps/api run start:migrate",
    "jobs:start": "npm -w apps/api run jobs:start",
    "admin:start": "npm -w apps/admin run start"
  }
}
